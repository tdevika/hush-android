<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="eventHandler"
            type="com.xpns.ui.search.SearchEventHandler" />

        <variable
            name="repositoryModel"
            type="com.xpns.data.model.Item" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_item_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
        android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="@{(view) -> eventHandler.onItemClick(repositoryModel)}"
        card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
        card_view:cardElevation="@dimen/card_recycler_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/text_margin">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dp56"
                android:layout_height="@dimen/dp56"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/text_margin"
                android:background="@drawable/round"
                bind:circleCrop="@{true}"
                bind:imageUrl="@{repositoryModel.owner.avatarUrl}" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/avatar"
                android:text="@{repositoryModel.name??` `}"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="@dimen/text_margin_very_small"
                android:layout_toEndOf="@id/avatar"
                android:text="@{repositoryModel.description??` `}" />

            <TextView
                android:id="@+id/forks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc"
                android:layout_marginTop="@dimen/text_margin_very_small"
                android:layout_toEndOf="@id/avatar"
                android:drawableStart="@drawable/ic_repo_forked"
                android:text="@{Integer.toString(repositoryModel.forksCount)??` `}" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>