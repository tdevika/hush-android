<resources xmlns:tools="http://schemas.android.com/tools">


    <!--Bottom Sheets-->
    <style name="ThemeOverlay.Hush.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.Hush.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.Hush.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <style name="Widget.Hush.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.Hush.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface"/>

</resources>
