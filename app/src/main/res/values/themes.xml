    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.Hush.DayNight" parent="Base.Theme.Montserrat"/>

    <style name="Base.Theme.Montserrat" parent="Base.Theme">
        <!--Material color attributes (light theme) -->
        <!--colorBackground appears behind scrollable content and is used for the default window background-->
        <item name="android:colorBackground">@color/md_dark_grey_50</item>
        <!--colorSurface is mapped to the surface of components such as cards, sheets and menus.-->
        <item name="colorSurface">@color/md_dark_grey_50</item>
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <item name="colorPrimary">@color/md_dark_grey_500</item>
        <item name="colorPrimaryVariant">@color/md_dark_grey_700</item>
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <item name="colorSecondary">@color/md_dark_grey_200</item>
        <!--selection controls.-->
        <item name="colorSecondaryVariant">@color/md_dark_grey_200</item>
        <!--colorError is used to indicate an error state for components such as text fields.-->
        <item name="colorError">@color/md_red_600</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/md_dark_grey_50</item>
        <item name="colorOnSecondary">@color/md_dark_grey_900</item>
        <item name="colorOnBackground">@color/md_dark_grey_900</item>
        <item name="colorOnSurface">@color/md_dark_grey_900</item>
        <item name="colorOnError">@color/md_dark_grey_50</item>


        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Montserrat.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Montserrat.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Montserrat.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Montserrat.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Montserrat.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Montserrat.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Montserrat.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Montserrat.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Montserrat.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Montserrat.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Montserrat.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.Montserrat.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Montserrat.Overline</item>
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyTheme.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyTheme.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyTheme.LargeComponent</item>
        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.MyTheme.BottomSheetDialog</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
    </style>

    <style name="Base.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorControlHighlight</item>
    </style>

