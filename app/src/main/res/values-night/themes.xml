<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.Hush.DayNight" parent="Theme.Hush.Dark" />

    <style name="Theme.Hush.Dark" parent="Base.Theme.Montserrat">
        <!--Material color attributes (dark theme) -->
        <item name="android:colorBackground">@color/md_dark_grey_900</item>
        <item name="colorSurface">@color/md_dark_grey_800</item>
        <item name="colorPrimary">@color/md_dark_grey_200</item>
        <item name="colorPrimaryVariant">@color/md_dark_grey_700</item>
        <item name="colorSecondary">@color/md_dark_grey_200</item>
        <item name="colorSecondaryVariant">@color/md_dark_grey_200</item>
        <item name="colorError">@color/md_red_200</item>
        <item name="colorOnPrimary">@color/md_dark_grey_900</item>
        <item name="colorOnSecondary">@color/md_dark_grey_900</item>
        <item name="colorOnBackground">@color/md_dark_grey_50</item>
        <item name="colorOnSurface">@color/md_dark_grey_50</item>
        <item name="colorOnError">@color/md_dark_grey_900</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>
</resources>
